<div class="col-login">
	<div class="logo"></div>
<div class="login"><p>Forgot your password?</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mail_s">
  <%= f.email_field :email, :autofocus => true, placeholder: "Insira o E-mail", class: "userlogo" %></div> <div class="userblue"></div>

  <div class="iniciar_s"><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<div class="recuperar"><p><%= render "devise/shared/links"%></p> </div>
</div>
</div>

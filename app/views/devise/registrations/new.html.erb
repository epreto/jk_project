<div class="col-login">
  <div class="logo"></div>
  <div class="login">

<p>Sign up</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="mail">
  <%= f.email_field :email, :autofocus => true, placeholder: "Novo E-mail", class: "userlogo" %></div><div class="userblue"></div>

  <div class="pass">
  <%= f.password_field :password, class: "passlogo", placeholder:"Nova Password" %></div><div class="userblue"></div>

  <div class="pass">
  <%= f.password_field :password_confirmation, placeholder:"Confirme a Password", class: "passlogo" %></div><div class="userblue"></div>

  <div class="iniciar"><%= f.submit "Sign up" %></div>
<% end %>

<div class="recuperar"><p><%= render "devise/shared/links" %></p></div>
</div>
</div>
